<div class='container'>
  <div class='profile-bar'>
    <div id='profile-img'>
      <img src='/img/profile-icon.png' alt='' id='profile-icon' />
      <div class='self-info'>
        <div class='d-flex align-items-center'>
          <h1 id='member-name'></h1>
          <div>
            <span
              class='badge rounded-pill bg-success isFollowed hidden'
            >追蹤中</span>
          </div>
        </div>

        <div class='following-info'>
          <p><span></span> 位追蹤者</p>
          <p>正在追蹤 <span></span> 人</p>
        </div>

      </div>

      <button
        type='button'
        class='btn btn-outline-secondary rounded-pill follow-btn js-follow-btn mx-3'
      >追蹤</button>
      <button
        type='button'
        class='btn btn-outline-secondary rounded-pill unfollow-btn js-unfollow-btn mx-3 hidden'
      >取消追蹤</button>
    </div>
  </div>

  <div class='function-select'>
    <div class='ideas-tabs'>
      <ul class='nav nav-tabs'>
        <li class='nav-item'>
          <a
            class='nav-link text-secondary'
            aria-current='page'
            href='/personal-articles/{{followId}}'
          >他的觀點</a>
        </li>
        <li class='nav-item'>
          <a class='nav-link active member-tab' href='/personal-following/{{followId}}'>他的追蹤觀點</a>
        </li>
      </ul>
    </div>
  </div>

  <div class='ideas-list'></div>

</div>

{{! JS }}
<script src='/javascript/personal-article.js'></script>